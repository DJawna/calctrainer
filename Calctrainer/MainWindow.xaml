<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calctrainer"
        xmlns:conv="clr-namespace:Calctrainer.wpfConverters"
        x:Class="Calctrainer.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <conv:DirtyColorConverter x:Key="DirtyColorConverter"></conv:DirtyColorConverter>
    </Window.Resources>
    <Grid>
        <TextBox x:Name="ProfileName" HorizontalAlignment="Left" Height="23" Margin="199,168,0,0" TextWrapping="Wrap" BorderBrush="{Binding ProfileDirty, Mode=OneWay, Converter={StaticResource DirtyColorConverter}}" Text="{Binding ProfileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
